            focusInvalid: false,
            ignore: "",
            rules: {
                Name: {
                    required: true
                },
                Subject: {
                    required: true
                },
                Grade: {
                    required: true
                }
            },

            messages: {
                Name: {
                    required: "Trường này không được bỏ trống ."
                },
                Subject: {
                    required: "Trường này không được bỏ trống ."
                },
                Grade: {
                    required: "Trường này không được bỏ trống ."
                }
            },

            highlight: function (e) {
                $(e).closest('.form-group').removeClass('has-info').addClass('has-error');
            },

            success: function (e) {
                $(e).closest('.form-group').removeClass('has-error'); //.addClass('has-info');
                $(e).remove();
            },

            errorPlacement: function (error, element) {
                if (element.is('input[type=checkbox]') || element.is('input[type=radio]')) {
                    var controls = element.closest('div[class*="col-"]');
                    if (controls.find(':checkbox,:radio').length > 1) controls.append(error);
                    else error.insertAfter(element.nextAll('.lbl:eq(0)').eq(0));
                } else if (element.is('.select2')) {
                    error.insertAfter(element.siblings('[class*="select2-container"]:eq(0)'));
                } else if (element.is('.chosen-select')) {
                    error.insertAfter(element.siblings('[class*="chosen-container"]:eq(0)'));
                } else error.insertAfter(element.parent());
            }

            //submitHandler: function (form) {

            //},
            //invalidHandler: function (form) {
            //}
        });
    </script>
    <script>
        $(function () {
            UploadImage();
            GetInfoYouutbe();
            CKEDITOR.replace('Content');
        });

        function UploadImage() {
            $("#btnUpload").click(function (e) {
                e.preventDefault();
                var finder = new CKFinder();
                finder.selectActionFunction = function (url) {
                    $("#ImageLink").text(url);
                    $("#ImageSrc").attr('src', url);
                    ToastMessage("success", "Upload thành công !");
                };
                finder.popup();
            });
        }
        function GetInfoYouutbe() {
            $("#getInfoYouutbe").click(function (e) {
                e.preventDefault();
                $("._modal").show();
                var url = $("#LinkYoutube").val();
                var id = youtube_getId(url);

                var url = 'https://www.youtube.com/watch?v=' + id;
                $.getJSON('https://noembed.com/embed',
                    { format: 'json', url: url }, function (data) {
                        console.log(data);
                        if (typeof data.error === "undefined") {
                            $("#ImageLink").text(data.thumbnail_url);
                            $("#ImageSrc").attr('src', data.thumbnail_url);
                            $("#Name").val(data.title)
                            ToastMessage("success", "Lấy dữ liệu từ Youtube thành công !");
                        } else {
                            ToastMessage("error", "Thất bại! Vui lòng kiểm tra lại Link Youtube !");
                        }
                        $("._modal").hide();

                    });
            })
        }
    </script>
