
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .md-nav {
        display: none;
    }

    .validation-summary-valid {
        display: none;
    }
</style>

<section class="clearfix section-signin">
    <div class="signin-pattern-overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="login-all mt-50">
                    <div class="login-register-form mb-100">
                        <h3 class="h-bold text-uppercase">Đăng nhập</h3>
                        <div class="login-form mt-30">
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })
                                <div class="form-group">
                                    <input class="login-register-form-input" type="text" placeholder="Tên đăng nhập" name="UserName" value="" id="UserName" />
                                </div>
                                <div class="form-group">
                                    <input class="login-register-form-input" type="password" placeholder="Mật khẩu" id="Password" name="Password" value="" />
                                </div>
                                <div class="checkbox pull-left mt-10">
                                    <div class="checkbox checkbox-primary">
                                        <input id="checkbox2" type="checkbox">
                                        <label for="checkbox2">
                                            Ghi nhớ đăng nhập
                                        </label>
                                    </div>
                                </div>
                                <a href="#" class="pull-right forget-pass mt-10">Quên mật khẩu? </a><span class="clearfix"></span>
                                <button class="mt-10">Đăng nhập</button>
                            }
                            <div class="text-center mt-20 mb-15">
                                <p>Hoặc đăng nhập bằng:</p>
                                <ul class="login-social list-inline mt-20">
                                    <li class="fb"><a href="javascript:void(0)" scope="public_profile,email" onclick="checkLoginState();"><i class="fa fa-facebook"></i></a></li>
                                    <li class="gg"><div class="g-signin2" data-onsuccess="onSignIn" alt="Đăng nhập bằng Google"></div></li>
                                </ul>
                                <div class="clearfix"></div>

                            </div>
                            <div class="wow bounceIn" data-wow-delay="0.4s">
                                <p class="ques-dk-acc">Bạn chưa có tài khoản <a href="@Url.Action("Register","Account")">Đăng ký tài khoản</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>