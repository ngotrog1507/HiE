<div ng-controller="BaiGiangController" class="site-body bs-study-lecture-search-page">
    <!--breadcrumb:-->
    <div class="breadcrumb-outer">
        <div class="container">
            <ol class="breadcrumb breadcrumb-primary">
                <li><a href="index.html">Học</a></li>
                <li class="active">Bài giảng</li>
            </ol>
        </div>
    </div>
    <!--main content:-->
    <div class="container">
        <div class="p-y-lg row">
            <!--right col:-->
            <div class="col-md-9 col-md-push-3">
                <div class="panel">
                    <div class="panel-body">
                        <h1 class="bs-page-title text-center">DANH SÁCH BÀI GIẢNG TRONG HiSCHOOL</h1>
                        <table class="table table-striped bs-study-lecture-search--result" ng-show="IsSearch==false">
                            <tr>
                                <td class="subject">Lớp 10</td>
                                <td class="counter"><strong>63</strong> <span>Bài giảng</span></td>
                                <td class="action"><a href="lessone6ac.html?cmd=level&amp;grade_level=10" class="btn btn-primary">Xem chi tiết&nbsp; <i class="fa fa-caret-right"></i></a></td>
                            </tr>
                            <tr>
                                <td class="subject">Lớp 11</td>
                                <td class="counter"><strong>91</strong> <span>Bài giảng</span></td>
                                <td class="action"><a href="lesson969e.html?cmd=level&amp;grade_level=11" class="btn btn-primary">Xem chi tiết&nbsp; <i class="fa fa-caret-right"></i></a></td>
                            </tr>
                            <tr>
                                <td class="subject">Lớp 12</td>
                                <td class="counter"><strong>971</strong> <span>Bài giảng</span></td>
                                <td class="action"><a href="lesson5dfa.html?cmd=level&amp;grade_level=12" class="btn btn-primary">Xem chi tiết&nbsp; <i class="fa fa-caret-right"></i></a></td>
                            </tr>
                            <tr>
                                <td class="subject">Khác</td>
                                <td class="counter"><strong>23</strong> <span>Bài giảng</span></td>
                                <td class="action"><a href="lesson2fc2.html?cmd=level&amp;grade_level=99" class="btn btn-primary">Xem chi tiết&nbsp; <i class="fa fa-caret-right"></i></a></td>
                            </tr>
                        </table>
                        <div class="row tin-bg-noi-bat" ng-show="IsSearch==true">
                            <div class="col-xs-4 col-md-4" ng-repeat="record in records">
                                <div class="box-bai-giang">
                                    <a href="../class.bigschool.vn/lesson1efd.html?cmd=view_info&amp;id=10809" class="bg-cover">
                                    <img class="img-responsive" src="https://cdn-s07.bigschool.vn/img/subjects/Subject-detail-1.png" alt="{{record.Name}}"></a>
                                    <h4><a href="@Url.Action("Details","KhoaHoc")" title="{{record.Name}}" data-toggle=tooltip>{{record.Name}}</a></h4>
                                    <p class="ten-giao-vien"><a class="giao-vien" href="../class.bigschool.vn/profile7d78.html?cmd=teacher&amp;id=36574">{{record.FullName}}</a></p>
                                    <p class="mon-hoc">{{record.Grade}} - {{record.GradeName}}</p>
                                </div>
                            </div>
                            <p class="xem-them m-pd-r pull-right" style="margin-top:10px"><a href="@Url.Action("BaiGiang","KhoaHoc")">Xem thêm <i class="fa fa-angle-right"></i></a></p>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /right col-->
            <div class="col-md-3 col-md-pull-9">
                <div class="panel">
                    <div class="panel-body" style="padding: 10px;">
                        <h1 class="bs-page-title text-left">Tìm bài giảng</h1>
                        <div class="">
                            <form action="https://class.bigschool.vn/lesson.html" method="get" id="seachLessonForm">
                                <div class="form-group">
                                    <select id="seach_lesson_grade_level" ng-model="param.gradeId"   class="form-control" name="grade_level" ng-change="onChangeGrade()">
                                        <option value=""  selected >Chọn khối</option>
                                        <option ng-repeat="record in lstGrade" value="{{record.TypeCode}}">{{record.Name}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <select id="seach_lesson_subject_id" ng-model="param.subjectId"  class="form-control" name="subject_id" ng-disabled="isChangeGrade==false">
                                        <option value="" selected>Chọn môn</option>
                                        <option ng-repeat="record in lstSubject" value="{{record.Id}}">{{record.Name}}</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" ng-model="param.key" id="seach_lesson_keyword" name="keyword" value="" placeholder="Nhập từ khóa">
                                </div>
                                <hr>
                                <div class="text-center">
                                    <button type="button" class="btn btn-primary" id="btnSearch" ng-click="search()">XEM KẾT QUẢ</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <script type="text/javascript">
                function selectSubject(value) {
                    $('#seach_lesson_topic_id').val('');
                    gradeLevel = $('#seach_lesson_grade_level').val();
                    if (value == "") {
                        if (gradeLevel >= 0) {
                            $('#lesson_cmd').val("level");
                        }
                    }
                    $('#seachLessonForm').submit();
                }
            </script>

        </div>
    </div>
</div>

